        <url-pattern>/admin/teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTeacher</servlet-name>
        <url-pattern>/admin/teacher/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTeacher</servlet-name>
        <url-pattern>/admin/teacher/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
