<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.authentication.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controller.admin.HomeAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.authentication.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectAdmin</servlet-name>
        <servlet-class>controller.admin.SubjectAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSubject</servlet-name>
        <servlet-class>controller.subject.AddSubject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteSubject</servlet-name>
        <servlet-class>controller.subject.DeleteSubject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditSubject</servlet-name>
        <servlet-class>controller.subject.EditSubject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassAdmin</servlet-name>
        <servlet-class>controller.admin.ClassAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClass</servlet-name>
        <servlet-class>controller.classes.AddClass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteClass</servlet-name>
        <servlet-class>controller.classes.DeleteClass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditClass</servlet-name>
        <servlet-class>controller.classes.EditClass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teacher_admin</servlet-name>
        <servlet-class>teacher_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherAdmin</servlet-name>
        <servlet-class>controller.admin.TeacherAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTeacher</servlet-name>
        <servlet-class>controller.teacher.AddTeacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTeacher</servlet-name>
        <servlet-class>controller.teacher.DeleteTeacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectAdmin</servlet-name>
        <url-pattern>/admin/subject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSubject</servlet-name>
        <url-pattern>/admin/subject/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteSubject</servlet-name>
        <url-pattern>/admin/subject/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditSubject</servlet-name>
        <url-pattern>/admin/subject/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassAdmin</servlet-name>
        <url-pattern>/admin/class</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddClass</servlet-name>
        <url-pattern>/admin/class/add</url-pattern>
    </servlet-mapping>
